<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/user_item_layout"
        android:layout_marginTop="5dp">

        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/trips_details_profile_image"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/ic_user_solid"
                android:layout_marginStart="5dp"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical"
                android:layout_gravity="center_vertical">
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:orientation="horizontal">
                        <TextView
                                android:id="@+id/user_item_userFirstName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                android:text="ImiÄ™" />

                        <TextView
                                android:id="@+id/user_item_userLastName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                android:text="Nazwisko" />

                </LinearLayout>

                <TextView
                        android:id="@+id/user_item_tripAuthor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/organizer"
                        android:textSize="12sp"
                        android:visibility="gone"
                        />
        </LinearLayout>


</LinearLayout>