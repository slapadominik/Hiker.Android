<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
             tools:context=".presentation.trips.tabViews.upcomingTrips.UpcomingTripsTabView">
    <TextView
            android:id="@+id/upcomingTrips_emptyList_textView"
            android:text="@string/empty_upcomingTrips_list"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/roboto"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/upcomingTripsView_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/white"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/upcomingTripsView_addTrip_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="16dp"
            app:srcCompat="@drawable/ic_add_white_24dp"
            android:backgroundTint="@color/colorPrimary"
            app:borderWidth="0dp"/>
</FrameLayout>